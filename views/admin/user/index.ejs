<%-include ../public/header.ejs%>
<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
        <%- include ../public/slideLeft.ejs%>
    </div>
    <div class="col-sm-10">
      <ol class="breadcrumb">
        <li class="active">用户管理</li>
        <li class="active">用户列表</li>
      </ol>
      <div class="panel panel-default">
        <div class="panel-heading">
          搜索
        </div>
        <div class="panel-body">
          <form action="" class="form-inline" role="form">
            <div class="form-group">
              <label for="name">名字</label>
              <input type="text"class="form-control" id="name" placeholder="请输入名字查询">
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-default">搜&nbsp;&nbsp;索</button>
            </div>
          </form>
        </div>
      </div>
      <!--列表部分-->
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
          <tr>
            <th>编号</th>
            <th>名称</th>
            <th>简介</th>
            <th class="text-center">操作</th>
          </tr>
          </thead>
          <tbody>
          <%for(var i=0;i<list.length;i++){%>
          <tr>
            <td><%=i+1%></td>
            <td><%=list[i].username%></td>
            <td><%=list[i].description%></td>
            <td class="text-center">
              <a href="/admin/user/edit?id=<%=list[i]._id%>" class="btn btn-success">修改</a>
              <a href="/admin/user/delete?id=<%=list[i]._id%>" class="btn btn-danger">删除</a>
            </td>
          </tr>
          <%}%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
</body>
</html>
